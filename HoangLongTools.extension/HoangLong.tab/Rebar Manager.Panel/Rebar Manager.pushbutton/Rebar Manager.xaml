               x:Name="NguyenHoang_Login"
               Width="35" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               OpacityMask="#FFB95353" 
               Height="35" 
               MouseLeftButtonDown="User_Button_Click"
               Cursor="Hand" ToolTip="User Account Check">
                                                    <Image.RenderTransform>
                                                        <ScaleTransform x:Name="ImageScaleTransform" ScaleX="1" ScaleY="1"/>
                                                    </Image.RenderTransform>
                                                    <Image.RenderTransformOrigin>0.5,0.5</Image.RenderTransformOrigin>
                                                    <Image.Triggers>
                                                        <EventTrigger RoutedEvent="Image.Loaded">
                                                            <BeginStoryboard>
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetName="ImageScaleTransform"
                                           Storyboard.TargetProperty="ScaleX"
                                           From="1.0" To="1.1" Duration="0:0:1"
                                           AutoReverse="True"/>
                                                                    <DoubleAnimation Storyboard.TargetName="ImageScaleTransform"
                                           Storyboard.TargetProperty="ScaleY"
                                           From="1.0" To="1.1" Duration="0:0:1"
                                           AutoReverse="True"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Image.Triggers>
                                                </Image>
                                            </Border>
                                        </Grid>

                                        <Grid Grid.Column="1" x:Name="MainGrid" Width="250" Margin="0,-2,0,-7">
                                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="NGUYEN HOANG"
        FontSize="30"                       
        FontFamily="{DynamicResource MyNasalFont}"
        FontWeight="Bold" Foreground="{DynamicResource PurpleGradientBrush}"/>


                                                <!-- Path line and moving circles -->
                                                <Grid Height="7" Margin="0,-5,0,0">
                                                    <!-- Path line -->
                                                    <Path Stroke="{DynamicResource PurpleGradientBrush}"
           StrokeThickness="2"
           HorizontalAlignment="Left"
           VerticalAlignment="Center"
           Data="M 0,-2 
                 L 126,-2 
                 L 133,-29 
                 L 239,-29" />

                                                    <!-- Circle 1: left → middle → back -->
                                                    <Ellipse x:Name="RollingCircle" Width="5" Height="5" Fill="{DynamicResource PurpleGradientBrush}"
         HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,-4,0,0">
                                                        <Ellipse.RenderTransform>
                                                            <MatrixTransform x:Name="CircleMatrixTransform" />
                                                        </Ellipse.RenderTransform>
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="#FF8E51F7" BlurRadius="5" ShadowDepth="0" Opacity="0.7"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>

                                                    <!-- Circle 2: right → middle → back -->
                                                    <Ellipse x:Name="RollingCircle2" Width="5" Height="5" Fill="{DynamicResource PurpleGradientBrush}"
         HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-28,2,0">
                                                        <Ellipse.RenderTransform>
                                                            <MatrixTransform x:Name="CircleMatrixTransform2" />
                                                        </Ellipse.RenderTransform>
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="#FFEA8E71" BlurRadius="5" ShadowDepth="0" Opacity="0.7"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Animation Resources -->
                                            <Grid.Resources>
                                                <!-- Path from start to middle -->
                                                <PathGeometry x:Key="PathFromStart">
                                                    <PathFigure StartPoint="0,0">
                                                        <LineSegment Point="123,0" />
                                                        <LineSegment Point="127,-13" />
                                                    </PathFigure>
                                                </PathGeometry>

                                                <!-- Path from end to middle -->
                                                <PathGeometry x:Key="PathFromEnd">
                                                    <PathFigure StartPoint="0,0">
                                                        <LineSegment Point="-103,0" />
                                                        <LineSegment Point="-107,13" />
                                                    </PathFigure>
                                                </PathGeometry>

                                                <!-- Circle 1 Animation -->
                                                <Storyboard x:Key="Circle1Storyboard" RepeatBehavior="Forever" AutoReverse="True">
                                                    <MatrixAnimationUsingPath
     Storyboard.TargetName="CircleMatrixTransform"
     Storyboard.TargetProperty="Matrix"
     Duration="0:0:7"
     DoesRotateWithTangent="False"
     PathGeometry="{StaticResource PathFromStart}" />
                                                </Storyboard>

                                                <!-- Circle 2 Animation -->
                                                <Storyboard x:Key="Circle2Storyboard" RepeatBehavior="Forever" AutoReverse="True">
                                                    <MatrixAnimationUsingPath
     Storyboard.TargetName="CircleMatrixTransform2"
     Storyboard.TargetProperty="Matrix"
     Duration="0:0:7"
     DoesRotateWithTangent="False"
     PathGeometry="{StaticResource PathFromEnd}" />
                                                </Storyboard>
                                                <!-- Easing for smooth breathing -->
                                                <QuadraticEase x:Key="EaseInOut" EasingMode="EaseInOut"/>

                                                <!-- Breathing Gradient Animation -->
                                                <Storyboard x:Key="BreathingGradientStoryboard" RepeatBehavior="Forever" AutoReverse="True"/>
                                            </Grid.Resources>

