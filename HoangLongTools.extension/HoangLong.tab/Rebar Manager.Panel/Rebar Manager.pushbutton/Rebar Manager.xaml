                                        <Grid Grid.Column="0" Margin="0,-10,0,-10">
                                            <Border CornerRadius="30" 
            BorderThickness="1,1,1,1" 
            BorderBrush="#FF9151FC" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Width="35" 
            Height="35" 
            Margin="-0.3,0,0,0">
