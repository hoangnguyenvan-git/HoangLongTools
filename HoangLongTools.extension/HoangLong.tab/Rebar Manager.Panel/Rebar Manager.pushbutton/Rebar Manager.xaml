                                            <ProgressBar x:Name="ProgressBar" Value="0" Maximum="100" Background="#FFE6E6E6">
                                                <ProgressBar.Template>
                                                    <ControlTemplate TargetType="ProgressBar">
                                                        <Border Background="#FFF7F7EB" 
                                CornerRadius="10"
                                BorderBrush="#FFE1CEAD" 
                                BorderThickness="2">
