                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <Button Name="All_None" Style="{StaticResource ModernButtonStyle}"  Grid.Column="0" Content="All / None" Click="All_None_Button_Click"/>
                                                    <Button Name="Show" Style="{StaticResource ModernButtonStyle}" Grid.Column="1" Content="Show" Click="Show_Button_Click" />
