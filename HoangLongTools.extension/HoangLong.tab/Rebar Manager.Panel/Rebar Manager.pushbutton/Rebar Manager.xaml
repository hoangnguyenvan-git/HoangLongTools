                                                                                           FontWeight="Bold" 
                                                                                           FontSize="18" 
                                                                                           Foreground="#FFECA931" 
                                                                                            FontFamily="Arial"></TextBlock>
                                                                                <TextBlock Text="|  SỐ LƯỢNG :" 
                                                               FontWeight="Bold" 
                                                               FontSize="18" 
                                                               Foreground="#FF9643FF" 
                                                               Margin="10,0,0,0"
                                                                                           FontFamily="Arial"></TextBlock>
                                                                                <TextBlock Text="{Binding ItemCount}" 
                                                               FontWeight="Bold" 
                                                               FontSize="18" 
                                                               Foreground="#FF9643FF" 
