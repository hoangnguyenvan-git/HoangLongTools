                                                <EventTrigger RoutedEvent="Grid.Loaded">
                                                    <BeginStoryboard Storyboard="{StaticResource Circle1Storyboard}" />
                                                    <BeginStoryboard Storyboard="{StaticResource Circle2Storyboard}" />
                                                    <BeginStoryboard Storyboard="{StaticResource BreathingGradientStoryboard}" />
                                                </EventTrigger>
                                            </Grid.Triggers>

                                        </Grid>

                                        <Grid Grid.Column="2">
                                            <StackPanel VerticalAlignment="Center"
     HorizontalAlignment="Left" Margin="5,0,0,0">
