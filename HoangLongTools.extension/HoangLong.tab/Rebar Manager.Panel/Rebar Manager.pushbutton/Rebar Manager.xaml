                                                      Click="Auto_Rotate_X_Button_Click"/>

                                            <Button Name="AutoRotateY" 
                                                      Style="{StaticResource ModernButtonStyle}"
                                                      Grid.Row="3" 
                                                      Content="Align Y Axis"
                                                      Click="Auto_Rotate_Y_Button_Click"/>

                                        </Grid>
                                    </GroupBox>
                                </DockPanel>
                            </Grid>

                        </Border>

                        <Border Grid.Row="4"
                               CornerRadius="10"
                               Margin="0"
                               Padding="0"
                               BorderBrush="#FFE8E6FB"
                               BorderThickness="2,2,2,2" 
                               Background="White">

                            <Grid Grid.Row="4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <DockPanel Grid.Row="0" Margin="0,0,0,0">
                                        <GroupBox Style="{StaticResource ModernGroupBox}" 
Margin="5,0,5,0">
                                            <GroupBox.Header>
                                                <TextBlock Text="Scale Detail"/>
                                            </GroupBox.Header>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Button Name="ScaleX" 
                                  Style="{StaticResource ModernButtonStyle}"
                                  Grid.Row="0" 
                                  Content="Scale Detail"
                                  Click="Scale_Detail_Button_Click"/>
                                                <TextBox Name="ScaleValue" 
                                                         Style="{StaticResource ModernTextbox}"
                                   Grid.Row="2" 
                                   HorizontalContentAlignment="Center" 
                                   TextAlignment="Center" Text="- 2x -" 
                                   ToolTip="Segment Length (100,200,300)" 
                                   VerticalContentAlignment="Center"
                                   GotFocus="Scale_Detail_GotFocus"
                                   LostFocus="Scale_Detail_LostFocus"
                                   TextChanged="Scale_Detail_TextChanged"
                                   />
                                            </Grid>
                                        </GroupBox>
                                    </DockPanel>

                                </Grid>
                            </Grid>

                        </Border>

                        <Border Grid.Row="5"
                               CornerRadius="10"
                               Margin="0"
                               Padding="0"
                               BorderBrush="#FFE8E6FB"
                               BorderThickness="2,2,2,2" 
                               Background="White">
                            <Grid Grid.Row="5">
                                <Button 
                                        Name="ViewModel"  
                                        Style="{StaticResource ModernButtonStyle}"
                                        Grid.Row="1"
                                        Content="View Model" 
                                        Width="90"
                                        Click="View_Model_Button_Click"
                                        />
                            </Grid>

                        </Border>

                    </Grid>

                </Grid>

            </Border>
        </Grid>
    </Border>

</Window>
